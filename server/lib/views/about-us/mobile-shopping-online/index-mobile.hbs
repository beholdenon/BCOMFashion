<style>
    .LBHeading {
        font-family: 'Libre Baskerville', serif;
        font-size:2.5rem;
    }
    .item.right DIV.LBHeading {
        padding-bottom:0;
    }
    .item.center, .item.center DIV {
        text-align:center;
        margin-left:auto;
        margin-right:auto;
    }
    .item.left, .item.left DIV {
        text-align:left;
    }
    .item.right, .item.right DIV{
        text-align:right;
        float:right;
        clear:both;
        padding-bottom:40px;
    }

    .item {
        clear:both;
        margin:0;
        padding:80px;
        padding-top:40px;
        padding-left:40px;
        padding-right:40px;
        font-size:1.4rem;
    }
    .bl_mobile .item {
        clear:both;
        margin-right:20px;
        margin-left:20px;
        padding-top:40px;
        padding-left:13px;
        padding-right:13px;
    }
    .subitem {
        width:400px;
        margin-top:20px;
        line-height:1.3;
        font-size:1.3rem;
    }
    .bl_mobile  .subitem {
        width:inherit;
        font-size:1.2rem;
        line-height:1.5;
    }
    .bl_mobile  .LBHeading {
        font-size: 2.6rem;
        white-space: nowrap;
        line-height:1.2;
        letter-spacing: 0.02rem;
    }

    .item.right .subitem{
        float:right;
    }
    .ways_to_shop .content {
        width:640px;
    }
    .ways_to_shop .right_pic {
        margin:0px;
    }
    .app_logos {
        margin-top:10px;
        width:260px;
    }
    .bl_mobile .app_logos {
        margin-top:10px;
        width:inherit;
    }

    .app_logos TD {
        padding-left:4px;
        padding-right:4px;
        text-align:center;
    }
    .app_logos IMG {
        height:36px;
    }

    .item.center IMG {
        margin-left:auto;
        margin-right:auto;
    }
    .right .m_icon {
        float: right;
    }
    DIV[class^="icon-"]  {
        margin-top:-40px;
        margin-bottom:15px;
    }
    DIV[class^="icon-"].icon_left {
        margin-left:-25px;
        margin-top:-25px;
    }
    DIV[class^="icon-"].icon_right {
        margin-right:-35px;
    }
    .bl_mobile DIV.mobile_hide {
        display:none;
    }
</style>
